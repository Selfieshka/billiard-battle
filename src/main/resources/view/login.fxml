<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" xmlns="http://javafx.com/javafx/17" fx:id="parent" prefHeight="700.0" prefWidth="1100.0"
            style="-fx-background-color: transparent;"
            fx:controller="ru.kpfu.itis.kirillakhmetov.billiardbattle.client.controller.LoginController">
    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
    <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
          prefWidth="600.0" style="-fx-background-color: #005B26;" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="10.0" HBox.hgrow="ALWAYS">
            <Label text="Billiard Battle" textFill="WHITE">
                <font>
                    <Font name="Kristen ITC" size="64.0"/>
                </font>
            </Label>
            <HBox maxWidth="-Infinity" prefWidth="450.0"
                  style="-fx-border-color: white; -fx-background-radius: 0; -fx-border-radius: 10;">
                <VBox.margin>
                    <Insets left="50.0" right="50.0" top="10.0"/>
                </VBox.margin>
                <TextField fx:id="username" prefHeight="50.0" promptText="Никнейм"
                           style="-fx-background-color: transparent; -fx-prompt-text-fill: #dedede; -fx-text-fill: white;"
                           HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </TextField>
                <Button graphicTextGap="5.0" mnemonicParsing="false" prefHeight="32.0"
                        style="-fx-background-color: transparent;" HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox maxWidth="-Infinity" prefWidth="450.0"
                  style="-fx-border-color: white; -fx-background-radius: 0; -fx-border-radius: 10;">
                <VBox.margin>
                    <Insets left="50.0" right="50.0" top="10.0"/>
                </VBox.margin>
                <PasswordField fx:id="password" prefHeight="50.0" prefWidth="450.0" promptText="Пароль"
                               style="-fx-background-color: transparent; -fx-prompt-text-fill: #dedede; -fx-text-fill: white;"
                               HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="20.0"/>
                    </font>
                </PasswordField>
                <Button mnemonicParsing="false" prefHeight="32.0" style="-fx-background-color: transparent;"
                        HBox.hgrow="ALWAYS"/>
            </HBox>
            <HBox alignment="TOP_CENTER" prefHeight="50.0" prefWidth="1090.0" spacing="30.0">
                <Button fx:id="login" mnemonicParsing="false" prefHeight="40.0" prefWidth="83.0"
                        style="-fx-background-color: #FFD700; -fx-background-radius: 10; -fx-background-insets: 0; -fx-text-fill: black;"
                        text="Вход">
                    <font>
                        <Font size="18.0"/>
                    </font>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                </Button>
                <Button fx:id="register" mnemonicParsing="false" prefHeight="40.0" prefWidth="137.0"
                        style="-fx-background-color: #FFD700; -fx-background-radius: 10; -fx-background-insets: 0; -fx-text-fill: black;"
                        text="Регистрация">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Button>
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
